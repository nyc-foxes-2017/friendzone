
<table class = "profile-table">
    <tr>

      <th><%=@user.name%></th>
    </tr>
    <tr>
      <%if @user.avatar_url %>

      <td><img src= <%=@user.avatar_url %>/></td>

      <% end %>
    </tr>

    <tr>
      <%if @user.friends %>
      <td><%= @user.friends.count %> friends</td>
      <% end %>
    </tr>

    <tr>
      <%if @user != current_user %>
      <td><form action="/friends" method="post">
        <input type="submit" value="Add Friend" />
      </form></td>
      <% end %>
    </tr>

  </table>

<div class="post-form">
  <%= render 'shared/post.html.erb' %>

</div>

<div class="newsfeed-center">
  <% if @posts %>
  <table class = "newsfeed-table">
    <% @posts.each do |post|%>
    <tr>
      <td><%= post.content%></td>
    </tr>
    <tr>
      <td><%= time_ago_in_words(post.created_at)%></td>
    </tr>
    <tr>
      <td><a class="buttonize" href="#">Friend Request</a></td>
    </tr>

    <% end %>


  </table>
  <% else %>
  <p>There are no posts in <%=@user.name%>'s' feed!
  </p>
  <% end %>
</div>
