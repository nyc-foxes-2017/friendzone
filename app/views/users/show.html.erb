
<table class = "profile-table">
  <% if @user %>
    <tr>
      <th><%=@user.name%></th>
    </tr>
    <tr>
      <td><img src= <%=@user.avatar_url %>/></td>
    </tr>
    <tr>
      <td><%= @user.friends.count %> friends</td>
    </tr>
  <% end %>


  </table>

<div class="post-form">
  <%= render 'shared/post.html.erb' %>

</div>

<div class="newsfeed-center">
  <% if @posts %>
  <table class = "newsfeed-table">
    <tr>
      <% @posts.each do |post|%>
      <td><%= post.content%></td>
    </tr>
    <tr>
      <td><%= time_ago_in_words(post.created_at)%></td>
    </tr>
      <% end %>
    <tr>
      <td><a class="buttonize" href="#">Friend Request</a></td>
    </tr>
  </table>
  <% else %>
  <p>There are no posts in your feed! Try making a few friend requests or post a story of your own.
  </p>
  <% end %>
</div>
