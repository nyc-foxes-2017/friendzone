<!DOCTYPE html>
<html>
  <head>
    <title>Friendzone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <nav>
    <ul>
    <% if user_signed_in? %>
      <form id="search-form">
        <input id="search" type="text" name="query" />
      </form>
    <% end %>
    </ul>
  </nav>
    <%= yield %>
  </body>
</html>
